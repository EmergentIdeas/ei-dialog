##dialogFrame##
<div class="dialog-frame">
	<div class="mask">&nbsp;</div>
	<div class="the-dialog">
		<div class="head">
			__title__
		</div>
		<div class="body">
		</div>
		<div class="foot">
			__buttons::button__
		</div>
	</div>
</div>
##button##
<button class="__classes__" type="button">__label__</button>
##dialogFrameStyles##
.dialog-frame {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 10000;
	opacity: 0;
	transition: opacity .3s;
}

.dialog-frame.open {
	opacity: 1;
}

.dialog-frame .mask {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #333333;
	opacity: .7;
	height: 100%;
	z-index: 0;
}

.dialog-frame .the-dialog {
	position: relative;
	display: inline-block;
	max-width: 90%;
	max-height: 90%;
	z-index: 1;
	border-radius: 5px;
	background-color: white;
	overflow: hidden;
	top: 0;
	left: 0;
}

.dialog-frame .the-dialog .head {
	border-bottom: solid #aaaaaa 1px;
	line-height: 2em;
	padding: 0 10px;
}

.dialog-frame .the-dialog .body {
	padding: 20px;
	overflow: auto;
}

.dialog-frame .the-dialog .foot {
	border-top: solid #aaaaaa 1px;
	padding: 10px;
}

.dialog-frame .the-dialog .foot button {
	margin-right: 15px;
}